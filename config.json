{   
   "monitoringDirectory": "/Desktop/observer_folder",

   "fileCategories":{
      "imagens": {
         "extensions": ["jpeg","jpg","img","svg","png","gif"],
         "destinationDirectory": "/Desktop/observer_folder/imagens"
      },
      "video": {
         "extensions": ["mov","mp4","avi","flv"],
         "destinationDirectory": "/Desktop/observer_folder/video"
      },
      "documents": {
         "extensions": ["docx","xlsx","doc","xls","odp","cop","pptx","txt"],
         "destinationDirectory": "/Desktop/observer_folder/documentos"
      },
      "compressed": {
         "extensions": ["zip","whl","iso","xz","gz"],
         "destinationDirectory": "/Desktop/observer_folder/zip"
      },
      "executable": {
         "extensions": ["deb","exe"],
         "destinationDirectory": "/Desktop/observer_folder/executable"
      },
      "music": {
         "extensions": ["mp3"],
         "destinationDirectory": "/Desktop/observer_folder/audio"
      },
      "pdf": {
         "extensions": ["pdf"],
         "destinationDirectory": "/Desktop/observer_folder/documentos/pdf"
      }
   }
}
